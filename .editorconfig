# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Gradle & Kotlin build scripts
[*.{gradle,gradle.kts,kts}]
indent_size = 4
continuation_indent_size = 8

# Java source files
[*.java]
indent_size = 4

# C++ / CUDA files
[*.{cpp,h,cuh}]
indent_size = 4

# Markdown / docs
[*.md]
trim_trailing_whitespace = false

# YAML (for GitHub Actions, configs, etc.)
[*.yml]
indent_size = 2

# JSON configs
[*.json]
indent_size = 2